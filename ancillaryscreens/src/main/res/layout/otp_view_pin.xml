<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:id="@+id/parent_pin"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_confirmation_header"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/ttb_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/reset_password"
            android:scaleType="fitStart"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_cross_icon" />

        <TextView
            android:id="@+id/ttb_confirmation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:gravity="center"
            android:letterSpacing="0.10"
            android:text="@string/verify_phone"
            android:textColor="@color/color1"
            android:textSize="14sp" />


    </RelativeLayout>
    <View
        android:id="@+id/header_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:padding="16dp"
        android:text="@string/verification_code"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verification_code_subtext"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textColor="@color/color_primary" />

    <com.mukesh.OtpView
        android:id="@+id/otp_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:inputType="number"

        android:textColor="@color/colorPrimary"
        android:textAllCaps="true"
        app:OtpHideLineWhenFilled="false"
        app:OtpItemCount="4"
        app:OtpItemSpacing="6dp"
        app:OtpLineColor="@color/colorAccent"
        app:OtpState_filled="true"
        app:OtpViewType="rectangle" />

    <Button
        android:id="@+id/validate_button"
        style="@style/ButtonStyle1"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_marginTop="72dp"
        android:textSize="14.5sp"
        android:letterSpacing="0.066"
        android:text="@string/validate"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/countdown_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/seconds_remaining"
        style="@style/LabelStyle2"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>
