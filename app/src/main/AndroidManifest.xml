<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.psx.odktest">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:name">
        <activity
            android:name=".ui.SearchActivity.SearchActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".ui.ComingSoon.ComingSoon"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".ui.VisitsScreen.MyVisitsActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".ui.HomeScreen.HomeActivity"
            android:theme="@style/BaseAppTheme">
            <intent-filter>
                <action android:name="com.psx.odk.LAUNCH_HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SplashScreen.SplashActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>