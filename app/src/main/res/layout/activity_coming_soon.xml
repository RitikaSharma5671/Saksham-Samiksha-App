<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    android:padding="0dp">

    <include layout="@layout/toolbar" />

    <include
        layout="@layout/toolbar_action_bar_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar" />


    <TextView
        android:id="@+id/faq_teacher_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:letterSpacing="0.062"
        android:maxLines="9"
        android:text="For Teachers and Schools Heads, Please click on the link below to access the document to answer your queries."
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="14.5sp"

        android:textStyle="normal" />

    <TextView
        android:id="@+id/faq_teacher_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faq_teacher_title"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:letterSpacing="0.062"
        android:maxLines="3"
        android:text="LINK."
        android:textAllCaps="false"

        android:textColor="@color/color_primary"
        android:textSize="17.5sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/viwq1"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/faq_teacher_doc"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"

        android:background="@color/green" />

    <TextView
        android:id="@+id/faq_mentor_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/viwq1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"

        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:letterSpacing="0.062"
        android:maxLines="9"
        android:text="For Mentors and Monitors, Please click on the link below to access the document to answer your queries."
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="14.5sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/faq_mentor_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faq_mentor_title"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:textIsSelectable="true"
        android:letterSpacing="0.062"
        android:maxLines="3"
        android:text="LINK 2"
        android:textAllCaps="false"
        android:textColor="@color/color_primary"
        android:textSize="17.5sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/faq_mentor_doc"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="@color/green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_centerInParent="true"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:letterSpacing="0.062"
            android:text="If you are unable to be redirected to help section via above button, Please copy and paste the following link in your browser."
            android:textSize="14.5sp" />

        <TextView
            android:id="@+id/documentation_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:letterSpacing="0.062"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:textIsSelectable="true"
            android:textSize="17.5sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/logo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:padding="10dp"
            android:src="@drawable/saksham_haryana" />


    </LinearLayout>


</RelativeLayout>
