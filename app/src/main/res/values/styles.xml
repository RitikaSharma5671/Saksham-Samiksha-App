<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FormEntryActivityTheme" parent="BaseAppTheme">
        <item name="android:textDirection" tools:targetApi="17">firstStrong</item>
    </style>

    <style name="sampleTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light">
        <!--Material theme attributes-->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Collect.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Collect.Subtitle1</item>
        <!--/Material theme attributes-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="primaryTextColor">@color/primary_text_color</item>
        <item name="secondaryTextColor">@color/secondary_text_color</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
        <item name="android:scrollbarSize">1.75mm</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        +        <item name="android:windowExitTransition" tools:targetApi="lollipop">@transition/main_exit</item>
        <item name="android:windowReenterTransition" tools:targetApi="lollipop">@transition/main_reenter</item>
        <item name="android:windowEnterTransition" tools:targetApi="lollipop">@transition/main_enter</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:panelBackground">@android:color/white</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="iconColor">@color/icons</item>
        <item name="dividerColor">@color/divider</item>
        <item name="android:textDirection" tools:targetApi="17">locale</item>
        <item name="dividerCompat">@android:drawable/divider_horizontal_bright</item>
        <item name="android:tintMode" tools:targetApi="21">src_in</item>
    </style>

    <!--To Modify the toolbar throughout the app-->


    <style name="BaseAppTheme.SettingsTheme.Dark" parent="BaseAppTheme">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textDirection" tools:targetApi="17">locale</item>
        <item name="android:textSize">18sp</item>
        <item name="android:listDivider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

</resources>
