<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ArcProgress">
        <attr name="arc_progress" format="integer" />
        <attr name="arc_angle" format="float" />
        <attr name="arc_stroke_width" format="dimension" />
        <attr name="arc_max" format="integer" />

        <attr name="arc_unfinished_color" format="color" />
        <attr name="arc_finished_color" format="color" />


        <attr name="arc_text_size" format="dimension" />
        <attr name="arc_text_color" format="color" />


        <attr name="tv_next_goal" format="string" />
        <attr name="tv_next_goal_text_size" format="dimension" />
        <attr name="tv_next_goal_color" format="color" />

        <attr name="tv_points_to" format="string" />
        <attr name="tv_reward" format="string" />
        <attr name="tv_points_to_text_size" format="dimension" />
        <attr name="tv_points_to_color" format="color" />


        <attr name="tv_static_next_goal" format="string" />
        <attr name="tv_static_next_goal_text_size" format="dimension" />
        <attr name="tv_static_next_goal_color" format="color" />


        <attr name="scale_reward" format="dimension" />
        <attr name="tv_reward_text" format="string" />
        <attr name="tv_reward_text_size" format="dimension" />
        <attr name="tv_reward_text_color" format="color" />

        <attr name="arc_suffix_text" format="string" />
        <attr name="arc_suffix_text_size" format="dimension" />
        <attr name="arc_suffix_text_padding" format="dimension" />

        <attr name="arc_bottom_text" format="string" />
        <attr name="arc_bottom_text_size" format="dimension" />

        <attr name="image_width" format="dimension" />
        <attr name="image_height" format="dimension" />

    </declare-styleable>


    <declare-styleable name="StateProgressBar">

        <attr name="spb_stateBackgroundColor" format="color" />
        <attr name="spb_stateForegroundColor" format="color" />
        <attr name="spb_stateDotColor" format="color" />

        <attr name="spb_stateNumberBackgroundColor" format="color" />
        <attr name="spb_stateNumberForegroundColor" format="color" />

        <attr name="spb_currentStateDescriptionColor" format="color" />
        <attr name="spb_stateDescriptionColor" format="color" />

        <attr name="spb_stateSize" format="dimension" />

        <attr name="spb_stateTextSize" format="dimension" />

        <attr name="spb_stateDescriptionSize" format="dimension" />

        <attr name="spb_stateLineThickness" format="dimension" />

        <attr name="spb_checkStateCompleted" format="boolean" />


        <attr name="spb_animateToCurrentProgressState" format="boolean" />

        <attr name="spb_enableAllStatesCompleted" format="boolean" />

        <attr name="spb_descriptionTopSpaceDecrementer" format="dimension" />

        <attr name="spb_descriptionTopSpaceIncrementer" format="dimension" />

        <attr name="spb_animationDuration" format="integer" />

        <attr name="spb_animationStartDelay" format="integer" />


        <attr name="spb_currentStateNumber" format="enum">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
        </attr>


        <attr name="spb_maxStateNumber" format="enum">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
        </attr>

    </declare-styleable>


    <declare-styleable name="Themes">
        <attr name="arcProgressStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="ViewFinderView">
        <attr name="stroke_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ColorArcProgressBar">
        <attr name="back_color" format="color"/>
        <attr name="front_color1" format="color"/>
        <attr name="front_color2" format="color"/>
        <attr name="front_color3" format="color"/>
        <attr name="back_width" format="dimension"/>
        <attr name="front_width" format="dimension"/>
        <attr name="is_need_title" format="boolean"/>
        <attr name="is_need_content" format="boolean"/>
        <attr name="is_need_unit" format="boolean"/>
        <attr name="is_need_dial" format="boolean"/>
        <attr name="string_title" format="string"/>
        <attr name="string_unit" format="string"/>
        <attr name="total_engle" format="integer"/>
        <attr name="current_value" format="float"/>
        <attr name="max_value" format="float"/>

    </declare-styleable>

</resources>