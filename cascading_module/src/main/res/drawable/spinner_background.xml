<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <size
                        android:height="45dp"
                        android:width="329dp"/>
                    <solid
                        android:color="#00000000"/>
                    <stroke
                        android:color="@color/green"
                        android:width="1dp"/>
                </shape>
            </item>
            <item
                android:top="20dp"
                android:right="15dp">
                <bitmap android:src="@drawable/ic_down_arrow"
                    android:gravity="top|right"/>
            </item>
        </layer-list>
    </item>
</selector>
