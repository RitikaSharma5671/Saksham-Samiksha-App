<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="ButtonStyle1" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/buttonstyle1_text_color_selector</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_button</item> <!--Made compatible with Android 4.4-->
        <item name="android:lineSpacingMultiplier">1.42</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.062</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>


    <style name="ButtonStyleGrey" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/buttonstyle1_text_color_selector</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:background">@drawable/your_disabled_drawable
        </item> <!--Made compatible with Android 4.4-->
        <item name="android:lineSpacingMultiplier">1.42</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.062</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <color name="light_grey">#E5E5E5</color>
</resources>
