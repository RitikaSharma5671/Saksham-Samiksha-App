<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="teacherAttendanceItemViewModel"
            type="com.example.student_details.ui.teacher_attendance.TeacherAttendanceItemViewModel" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/list_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@id/ll"
            android:layout_marginStart="6dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/heart_blank_small" />

        <LinearLayout
            android:id="@+id/cdc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/list_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_title"
                style="@style/LabelStyle2"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{teacherAttendanceItemViewModel.title}"
                android:textStyle="bold"

                tools:text="Name_SRN" />

            <!--            <TextView-->
            <!--                android:id="@+id/list_subtitle"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                style="@style/LabelStyle3"-->
            <!--                android:textColor="@color/color5"-->
            <!--                android:textSize="14sp"-->
            <!--                android:text="@{attendanceItemViewModel.srn}"-->
            <!--                tools:text="Name_SRN" />-->

            <TextView
                android:id="@+id/list_desc"
                style="@style/LabelStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{teacherAttendanceItemViewModel.subtitle}"
                android:textColor="@color/color5"
                android:textSize="12sp"
                tools:text="Class_section" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cdc"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/list_avatar"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:id="@+id/ll"
            android:minHeight="40dp"
            android:weightSum="2">



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:id="@+id/attendance_button"
                android:background="@drawable/border_black_1"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    style="@style/LabelStyle3"
                    android:textSize="11sp"
                    android:text="Attendance"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/attendance_switch"
                    style="@style/SwitchStyle1"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_primary"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="6dp"
                    app:showText="true" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:background="@drawable/border_black_1"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:id="@+id/temp_button"
                    android:gravity="center_vertical"
                    style="@style/LabelStyle3"
                    android:textSize="12.5sp"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:text="T in &#xb0;F"/>
                <TextView
                    android:id="@+id/temp_value"
                    style="@style/SwitchStyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="___ &#xb0;F"
                    android:layout_alignParentEnd="true"
                    android:textSize="12.5sp"
                    android:padding="6dp"
                    android:layout_gravity="center"
                    android:textColor="@color/color_primary" />
            </RelativeLayout>

<!--            <Spinner-->
<!--                android:id="@+id/grade_spinner"-->
<!--                style="@style/DropdownStyle1"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginEnd="4dp"-->
<!--                android:layout_weight="1"-->
<!--                android:entries="@array/temp_list"-->
<!--                android:fontFamily="@font/tinos_regular"-->
<!--                android:padding="5dp" />-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"
            android:background="@color/green"
            android:layout_below="@id/ll"/>

    </RelativeLayout>
</layout>