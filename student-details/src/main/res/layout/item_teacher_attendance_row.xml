<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="teacherAttendanceItemViewModel"
            type="com.example.student_details.viewmodels.TeacherAttendanceItemViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/ll22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/list_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="2.5dp"
                android:contentDescription="@string/teacher_name_image"
                android:scaleType="fitCenter"
                tools:src="@drawable/heart_blank_small" />

            <LinearLayout
                android:id="@+id/cdc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/list_avatar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_title"
                    style="@style/LabelStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{teacherAttendanceItemViewModel.title}"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="Name_SRN" />

                <TextView
                    android:id="@+id/list_desc"
                    style="@style/LabelStyle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.5dp"
                    android:text="@{teacherAttendanceItemViewModel.subtitle}"
                    android:textColor="@color/color_primary"
                    android:textSize="11.5sp"
                    tools:ignore="SmallSp"
                    tools:text="Class_section" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll22"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/border_black_1"
            android:minHeight="45dp">

            <TextView
                android:id="@+id/temp_button"
                style="@style/LabelStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="Temperature in &#xb0;F"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temp_value"
                style="@style/SwitchStyle1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:padding="6dp"
                android:text="_____ &#xb0;F"
                android:textColor="@color/color_primary"
                android:textSize="12.5sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/attendance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/border_black_1"
            android:minHeight="45dp">

            <TextView
                android:id="@+id/attendnace_btn"
                style="@style/LabelStyle3"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:text="@string/attendance"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attendance_status"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_toStartOf="@+id/edit_icon"
                android:layout_toEndOf="@id/attendnace_btn"
                android:gravity="center"
                android:paddingStart="1.5dp"
                android:paddingEnd="1.5dp"
                android:text="@string/mark_attendance"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/color3"
                android:textSize="13.5sp"
                android:textStyle="normal"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:padding="6dp"
                android:src="@drawable/ic_edit_student__icon" />

            <LinearLayout
                android:id="@+id/other_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/edit_icon"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:visibility="gone"
                android:weightSum="2.5">

                <EditText
                    android:id="@+id/other_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:autofillHints="Enter Status"
                    android:background="@drawable/edit_text1"
                    android:ellipsize="end"
                    android:hint="@string/enter_status"
                    android:imeOptions="actionDone"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color3"
                    android:textSize="11.5sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/other_btn"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/round_btn"
                    android:padding="5dp"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <!--            <Spinner-->
            <!--                android:layout_width="0dp"-->
            <!--                android:id="@+id/attendance_layout_spinner"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_weight="1.3"-->
            <!--                android:background="@drawable/spinner_background" />-->

        </RelativeLayout>

        <View
            android:id="@+id/gtg"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/attendance_layout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:background="@color/green" />
    </RelativeLayout>


</layout>