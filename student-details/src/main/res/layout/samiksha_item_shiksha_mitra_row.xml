<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <!--        <variable-->
        <!--            name="attendanceItemViewModel"-->
        <!--            type="com.example.student_details.viewmodels.AttendanceItemViewModel" />-->
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/sm_student_item_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
             tools:src="@drawable/heart_blank_small" />
        <RelativeLayout
            android:id="@+id/sm_details_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/sm_student_item_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp">
            <RelativeLayout
                android:id="@+id/ddd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sm_item_student_name"
                    style="@style/LabelStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Name_SRN" />

                <TextView
                    android:id="@+id/sm_item_student_srn"
                    style="@style/LabelStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@id/sm_item_student_name"
                    android:maxLines="3"
                    android:layout_alignBottom="@id/sm_item_student_name"
                    android:singleLine="false"
                    android:textSize="13.5sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Name_SRN" />

                <RelativeLayout
                    android:id="@+id/sm_details_row_layout"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/sm_item_student_name"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/sm_item_sm_name"
                        style="@style/LabelStyle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="Name_SRN" />



                    <TextView
                        android:id="@+id/sm_item_sm_contact"
                        style="@style/LabelStyle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@id/sm_item_sm_name"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="Name_SRN" />

                    <TextView
                        android:id="@+id/shiksha_mitr_relation_value"
                        style="@style/LabelStyle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sm_item_sm_name"
                        android:layout_marginTop="8dp"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:text="SIBLING" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/sm_item_sm_no_registered_message"
                    style="@style/LabelStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sm_item_student_name"
                    android:layout_marginTop="8dp"
                      android:textColor="@color/color2"
                    android:textSize="13sp"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:text="No Shiksha Mitr Registered" />
            </RelativeLayout>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:id="@+id/edit_sm_details_icon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                 android:src="@drawable/ic_edit_sm_details" />
            <View
                android:id="@+id/sm_view"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@id/ddd"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="3dp"
                android:background="@color/green" />

        </RelativeLayout>




    </RelativeLayout>
</layout>