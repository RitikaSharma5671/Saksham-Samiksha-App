<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="studentItemViewModel"
            type="com.example.student_details.ui.StudentItemViewModel" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/heart_blank_small" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/student_details_box"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/profile_pic">

            <TextView
                android:id="@+id/name_srn"
                style="@style/LabelStyle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textSize="13.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grade_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_srn"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="12.5sp"
                android:textStyle="bold"
                android:textColor="@color/color1"
                android:gravity="center_vertical|left"
                android:singleLine="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/grade_section"
                android:layout_alignBottom="@id/grade_section"
                android:layout_toRightOf="@id/grade_section"
                android:layout_marginStart="32dp"
                android:id="@+id/edit_section"
                android:backgroundTint="@color/trans"
                android:padding="8dp"
                android:src="@drawable/ic_edit_student__icon" />

            <TextView
                android:id="@+id/father_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grade_section"
                android:layout_marginTop="2dp"
                android:textStyle="normal"
                android:textColor="@color/color5"
                android:textSize="11.5sp"
                android:gravity="center_vertical|left"
                android:singleLine="true" />

            <TextView
                android:id="@+id/mother_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/father_details"
                android:layout_marginTop="2dp"
                android:textStyle="normal"
                android:textColor="@color/color5"
                android:textSize="11.5sp"
                android:gravity="center_vertical|left"
                android:singleLine="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/student_details_box"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_alignStart="@+id/student_details_box"
            android:layout_marginBottom="2dp"
            android:background="@color/green"/>

    </RelativeLayout>
</layout>