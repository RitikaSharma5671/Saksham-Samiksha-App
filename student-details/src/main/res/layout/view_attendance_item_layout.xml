<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="studentItemViewModel"
            type="com.example.student_details.ui.employee_aggregate.EmployeeItemViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/profile_pic_employee"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/heart_blank_small" />

        <RelativeLayout
            android:id="@+id/student_details_box_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/profile_pic_employee">

            <TextView
                android:id="@+id/name_student_employee"
                style="@style/LabelStyle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/srn_number_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_student_employee"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="@color/color1"
                android:textSize="11.5sp"
                android:textStyle="normal" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@id/student_details_box_employee"
            android:layout_toEndOf="@id/profile_pic_employee"
            android:layout_alignStart="@id/student_details_box_employee"
            android:layout_marginTop="8dp"
            android:id="@+id/attendance_status_label_employee"
            android:letterSpacing="0.052"
            android:textAllCaps="true"
            android:layout_marginEnd="6dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_primary"
            android:text="@string/attendance_status"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/student_details_box_employee"
                android:layout_marginTop="8dp"
                android:minWidth="135dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/attendance_status_present_employee"
                android:background="@drawable/button_border_blue"
                android:letterSpacing="0.052"
                android:layout_marginEnd="8dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/color_primary"
                android:textSize="11.5sp"
                android:textStyle="bold" />




        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/attendance_status_present_employee"
            android:layout_alignStart="@+id/student_details_box_employee"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="4dp"
            android:background="@color/green" />

    </RelativeLayout>
</layout>