<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="studentItemViewModel"
            type="com.example.student_details.ui.StudentItemViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/heart_blank_small" />

        <RelativeLayout
            android:id="@+id/student_details_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/profile_pic">

            <TextView
                android:id="@+id/name_student"
                style="@style/LabelStyle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/srn_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_student"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="@color/color1"
                android:textSize="11.5sp"
                android:textStyle="normal" />
        </RelativeLayout>


        <android.widget.Button
            android:layout_width="85dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/attendance_status_absent"
            android:background="@drawable/round_btn"
            android:letterSpacing="0.052"
            android:text="ABSENT"
            android:layout_marginEnd="12dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/color2"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:textStyle="normal" />

        <android.widget.Button
            android:layout_width="85dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/attendance_status_present"
            android:background="@drawable/round_btn"
            android:letterSpacing="0.052"
            android:layout_marginEnd="12dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="PRESENT"
            android:textSize="11sp"
            android:textStyle="normal" />




        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/student_details_box"
            android:layout_alignStart="@+id/student_details_box"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:background="@color/green" />

    </RelativeLayout>
</layout>